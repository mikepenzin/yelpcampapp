<% include ../partials/header %>


<div class="container">
  <div class="message-form">
      <h1>Add New Campground</h1>
  </div>
  <div class="add-form">
    <form action="/campgrounds" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <input type="text" class="form-control" name="name" placeholder="Add camp name">
      </div>
      <div class="form-group">
        <input class="form-control" type="file" name="image" placeholder="image url">
      </div>
      <div class="form-group">
        <textarea class="form-control" rows="5" placeholder="Enter description to the camp" name="descr"></textarea>
      </div>
      <button type="submit" class="btn btn-default btn-search btn-block">Submit!</button>
    </form>
    
    <div><a href="/campgrounds">Back</a> </div>
  </div>
</div>




<% include ../partials/footer %>