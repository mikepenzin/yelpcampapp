<% include ../partials/header %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Yelp!Camp</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= campground.image %>">
				<div class="caption-full">
					<h4 class="pull-right">$9.00/night</h4>
					<h4><a href="#"><%= campground.name %></a></h4>
					<h6>added by <%= campground.author.username %></h6>
				    <h4>
                        <small class="text-muted">
                        	<%= campground.descr %>
                        </small>
                    </h4>
				</div>
			</div>
			<div class="well">
	        		<form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				      <div class="form-group">
				        <textarea class="form-control" rows="2" name="comment[text]"> <%= comment.text %> </textarea>
				      </div>
				      <div class="text-right">
				      	<button type="submit" class="btn btn-default btn-search">Upddate your review!</button>
				      </div>
				    </form>
				<hr>
			</div>
		</div>
	</div>
</div>
	
<% include ../partials/footer %>