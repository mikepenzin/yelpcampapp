<% include ../partials/header %>


<div class="container">
  <div class="message-form">
      <h1>Add New Review for - <%= campground.name %></h1>
  </div>
  <div class="add-form">
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
      <div class="form-group">
        <textarea class="form-control" rows="5" placeholder="Enter your review" name="comment[text]"></textarea>
      </div>
      <button type="submit" class="btn btn-default btn-search btn-block">Submit your review!</button>
    </form>
    
    <div><a href="/campgrounds/<%= campground._id %>">Back</a> </div>
  </div>
</div>




<% include ../partials/footer %>