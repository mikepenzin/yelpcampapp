<!DOCTYPE html>
<html lang="en">
<head>
	<title>Yelp!Camp - Find the best camping for you!</title>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
</head>
<body id="myPage">
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav-camp" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
          <a href="/" class="navbar-brand smoothScroll"><span class="logo" >yelp!camp</span></a>
        </div>
        <div class="collapse navbar-collapse" id="nav-camp">
          <ul class="nav navbar-nav">
            <!--<li><a href="#">About</a></li>-->
            <!--<li><a href="#" data-toggle="modal" data-target="#howitworks">How it works?</a></li>-->
            <!--<li><a href="#pics" class="smoothScroll">Best Recipes</a></li>-->
            <li class="divider-vertical"></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if(!currentUser){ %>
              <li><a href="/login">Login</a></li>
              <li><a href="/register">Sign Up</a></li>
            <% } else { %>
              <li>
                  <!--<img class="profile-img" src="https://pp.vk.me/c309417/v309417549/9522/beYEs15OBVA.jpg">-->
                  <% if(currentUser.image == undefined){ %>
                      <img class="profile-img" src="https://leafii.com/images/defaultProfilePic.png">
                  <% } else { %>
                      <img class="profile-img" src="https://pp.vk.me/c309417/v309417549/9522/beYEs15OBVA.jpg">
                  <% } %>
              </li>
              <li>
                  <a href="#">
                    <%= currentUser.username %>
                  </a> 
              </li>
              <li><a href="/logout">Logout</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
    
    <div class="container container-xs">
      <% if(error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert"><%= error %></div>
      <% } else if(success && success.length > 0) { %>
            <div class="alert alert-success" role="alert"><%= success %></div>
      <% } %>      
    </div>